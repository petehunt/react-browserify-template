{
  "name": "react-browserify-template",
  "version": "0.0.1",
  "description": "Quick boilerplate for browserify and React modules.",
  "main": "index.js",
  "dependencies": {
    "react": "~0.8"
  },
  "devDependencies": {
    "browserify": "~2.36.0",
    "envify": "~0.2.0",
    "reactify": "~0.4.0",
    "uglifyjs": "~2.3.6",
    "watchify": "~0.4.1"
  },
  "scripts": {
    "start": "watchify -o browser-bundle.js -v -d .",
    "build": "NODE_ENV=production browserify . | uglifyjs -cm > browser-bundle.min.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Pete Hunt",
  "license": "Apache 2",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  }
}
